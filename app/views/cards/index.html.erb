<div class="panel panel-default">
	<div class="panel-heading">Флешкарточки</div>
	<table class="table">
		<thead>
			<tr>
				<th>#</th>
				<th>Original Text</th>
				<th>Translated Text</th>
				<th>Review Date</th>
			</tr>
		</thead>
		<tbody>
			<% @cards.each do |card| %>
			<tr>
				<td><%= card.id %></td>
				<td><%= card.original_text %></td>
				<td><%= card.translated_text %></td>
				<td><%= card.review_date %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>