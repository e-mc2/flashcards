<div class="panel panel-default">
  <div class="panel-heading">Флешкарточки</div>
  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>Original Text</th>
        <th>Translated Text</th>
        <th>Review Date</th>
        <th>...</th>
      </tr>
    </thead>
    <tbody>
      <% @cards.each do |card| %>
      <tr>
        <td><%= card.id %></td>
        <td><%= card.original_text %></td>
        <td><%= card.translated_text %></td>
        <td><%= card.review_date.strftime("%d/%m/%Y") %></td>
        <td>
          <%= link_to "Edit", edit_card_path(card), class: "btn btn-success btn-sm"%>
          <%= link_to content_tag(:p, 'Delete', class: 'btn btn-danger btn-sm'), card, method: :delete, data: {confirm: "Уверен?"} %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>